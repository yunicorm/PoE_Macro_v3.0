{
    // AutoHotkey用の基本設定
    "files.defaultLanguage": "ahk",
    "files.associations": {
        "*.ahk": "ahk"
    },
    
    // エディタ設定
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.wordWrap": "on",
    "editor.formatOnSave": false,
    
    // エンコーディング（日本語コメント対応）
    "files.encoding": "utf8",
    
    // 作業効率向上の設定
    "editor.minimap.enabled": true,
    "editor.rulers": [80, 100],
    "editor.renderWhitespace": "boundary",
    
    // ファイルの除外設定（検索から除外）
    "files.exclude": {
        "**/*.exe": true,
        "**/*.tmp": true,
        "debug_log.txt": true
    },
    
    // 検索の除外設定
    "search.exclude": {
        "**/icons": true,
        "debug_log.txt": true
    },
    
    // ブレッドクラムの表示
    "breadcrumbs.enabled": true,
    
    // サイドバーの設定
    "explorer.confirmDelete": false,
    "explorer.sortOrder": "type"
}